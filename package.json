{
  "name": "@outworld/js-spotify",
  "version": "0.0.9",
  "private": true,
  "dependencies": {
    "@capacitor/android": "^2.4.5",
    "@capacitor/core": "2.4.5",
    "@ionic/react": "^5.5.2",
    "@ionic/react-router": "^5.5.2",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.9",
    "@types/react-router-dom": "^5.1.6",
    "ionicons": "^5.2.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "ionic build  && mv docker/supervisord-staging.conf docker/supervisord.conf && npm run postbuild",
    "build:prod": "ionic build && npm run postbuild",
    "postbuild": "mkdir -p .enoviah/service/@outworld/js-spotify && mv build/* .enoviah/service/@outworld/js-spotify/",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:ci": "eslint src/**/*.ts src/**/*.tsx",
    "generate-assets": "cordova-res --skip-config --copy",
    "setup": "npm i",
    "e2e": "echo [EnoviahCI] E2E Command not configured."
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:ci",
      "post-checkout": "eno-ci pc"
    }
  },
  "devDependencies": {
    "4": "0.0.0",
    "@capacitor/cli": "2.4.5",
    "@ionic/cli": "^6.12.3",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "node-sass": "^4.14.1"
  },
  "description": "Outworld Spotify APP",
  "enoviah": {
    "configuration": {
      "lifecycle": {
        "macos": {
          "onInit": {
            "commands": []
          },
          "onArtifact": {
            "commands": []
          },
          "onCodeQuality": {
            "commands": []
          }
        },
        "linux": {
          "onInit": {
            "commands": []
          },
          "onArtifact": {
            "commands": []
          },
          "onCodeQuality": {
            "commands": []
          }
        }
      },
      "rootPath": ".",
      "type": "service",
      "name": "js-spotify",
      "group": "outworld"
    },
    "service": {
      "artifact": {
        "linux": {
          "coverage": false,
          "e2e": false,
          "lint": false,
          "mandatory": [
            {
              "path": "Dockerfile",
              "name": "Dockerfile"
            },
            {
              "path": "package.json",
              "name": "package.json"
            },
            {
              "path": "docker",
              "name": "docker"
            }
          ],
          "test": false
        },
        "macos": {
          "coverage": false,
          "e2e": false,
          "lint": false,
          "mandatory": [],
          "test": false
        }
      },
      "deployment": {
        "production": {
          "env": [],
          "network": "traefik",
          "labels": {
            "traefik.port": "80",
            "traefik.frontend.rule": "Host:js-spotify.outworld.fr",
            "traefik.frontend.entryPoints": "http,https",
            "traefik.backend": "js-spotify-outworld-fr"
          }
        },
        "staging": {
          "env": [],
          "network": "traefik",
          "labels": {
            "traefik.port": "80",
            "traefik.frontend.rule": "Host:js-spotify-staging.outworld.fr",
            "traefik.frontend.entryPoints": "http,https",
            "traefik.backend": "js-spotify-outworld-fr"
          }
        }
      }
    }
  },
  "author": {
    "email": "ntrehout@outworld.fr",
    "name": "TREHOUT Nathan",
    "url": "https://outworld.fr/outworlders/ntrehout"
  }
}
